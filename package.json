    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "stylelint-config-recommended": "^5.0.0",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.4",
    "typescript-eslint-parser": "^22.0.0",
    "webpack": "^4.46.0"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pre-commit": "lint:staged && generate",
  "license": "MIT"
}
