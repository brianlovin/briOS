    "react": "^16.13.1",
    "react-clipboard.js": "^2.0.16",
    "react-dom": "^16.13.0",
    "react-flip-move": "^3.0.4",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^4.3.1",
    "react-visibility-sensor": "^5.1.1",
    "rebass": "^4.0.7",
    "reflexbox": "^4.0.6",
    "rehype-parse": "^7.0.1",
    "rehype-remark": "^8.0.0",
    "remark-stringify": "^8.1.1",
