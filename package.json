{
  "name": "brios",
  "version": "1.0.0",
  "engines": {
    "node": ">=16",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bunx --bun next dev",
    "build": "bunx --bun next build",
    "start": "bunx --bun next start",
    "lint": "bunx --bun eslint ./src/pages/* ./src/components/* ./src/pages/api/* ./src/graphql/* ./src/lib/* -c .eslintrc.json --fix --ext ts,tsx",
    "generate": "bunx --bun graphql-codegen",
    "generate:watch": "bunx --bun graphql-codegen --watch 'src/graphql/**/*.ts'",
    "postinstall": "bunx --bun graphql-codegen && bunx prisma generate",
    "db:dev": "pscale connect brianlovin main --port 3309",
    "db:prod": "pscale connect brianlovin main --port 3309"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
