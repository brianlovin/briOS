    "@tippy.js/react": "^3.1.1",
    "@tryghost/content-api": "^1.5.4",
    "apollo-server-micro": "^2.23.0",
    "cheerio": "^1.0.0-rc.5",
    "cookie": "^0.4.1",
    "cryptr": "^6.0.2",
    "date-fns": "^2.21.1",
    "firebase-admin": "^9.6.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.2",
    "graphql-tools-fork": "^9.0.1",
    "isomorphic-unfetch": "^3.1.0",
    "next": "^10.1.3",
    "next-seo": "^4.24.0",
