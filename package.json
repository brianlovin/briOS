    "@sentry/node": "^5.20.1",
    "@tryghost/content-api": "^1.4.3",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "apollo-server-micro": "^2.16.1",
    "cheerio": "^1.0.0-rc.3",
    "cookie": "^0.4.1",
    "cryptr": "^6.0.2",
    "date-fns": "^2.15.0",
    "firebase-admin": "^9.0.0",
